{
  "extends": [
    "config:base",
    "github>naa0yama/renovate-config//extends/docker-compose",
    "github>naa0yama/renovate-config//extends/dockerfile",
    "github>naa0yama/renovate-config//extends/github-actions",
    "github>naa0yama/renovate-config//extends/python",
    "github>naa0yama/renovate-config//extends/terraform"
  ],
  "patch": {
    "automerge": true
  },
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "schedule": ["before 5am on monday"]
  },
  "labels": ["renovate", "datasource:{{datasource}}", "depType:{{depType}}"],
  "timezone": "Asia/Tokyo",
  "packageRules": [
    {
      "addLabels": ["update-patch"],
      "matchUpdateTypes": ["patch"]
    },
    {
      "addLabels": ["update-minor"],
      "matchUpdateTypes": ["minor"]
    },
    {
      "addLabels": ["update-major"],
      "matchUpdateTypes": ["major"]
    }
  ]
}
