{
  "extends": [
    "config:base",
    "github>naa0yama/renovate-config//extends/docker",
    "github>naa0yama/renovate-config//extends/github-actions",
    "github>naa0yama/renovate-config//extends/python",
    "github>naa0yama/renovate-config//extends/terraform"
  ],
  "prHourlyLimit": 6,
  "separateMinorPatch": true,
  "patch": {
    "automerge": true,
    "packageRules": [
      {
        "depTypeList": ["dependencies", "devDependencies"],
        "packagePatterns": ["*"],
        "updateTypes": ["patch"],
        "groupName": "All patch update {{depType}}"
      }
    ]
  },
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "schedule": ["before 5am on monday"]
  },
  "labels": ["renovate", "datasource:{{datasource}}", "depType:{{depType}}"],
  "timezone": "Asia/Tokyo",
  "packageRules": [
    {
      "addLabels": ["update-patch"],
      "matchUpdateTypes": ["patch"]
    },
    {
      "addLabels": ["update-minor"],
      "matchUpdateTypes": ["minor"]
    },
    {
      "addLabels": ["update-major"],
      "matchUpdateTypes": ["major"]
    }
  ]
}
