{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "assigneesFromCodeOwners": false,
  "prHourlyLimit": 99,
  "prConcurrentLimit": 20,
  "separateMajorMinor": true,
  "separateMinorPatch": true,
  "patch": {
    "automerge": true,
    "packageRules": [
      {
        "groupName": "All patch update {{depType}}",
        "matchPackagePatterns": [
          "*"
        ],
        "matchUpdateTypes": [
          "patch"
        ]
      }
    ]
  },
  "pin": {
    "automerge": true,
    "packageRules": [
      {
        "groupName": "All pin update {{depType}}",
        "matchPackagePatterns": [
          "*"
        ],
        "matchUpdateTypes": [
          "pin"
        ]
      }
    ]
  },
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "labels": [
    "renovate",
    "datasource:{{datasource}}",
    "depType:{{depType}}",
    "versioning:{{versioning}}",
    "update-{{updateType}}",
    "manager:{{manager}}"
  ],
  "timezone": "Asia/Tokyo",
  "packageRules": []
}
