{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "addLabels": [
        "managers:dockerfile"
      ],
      "matchManagers": [
        "dockerfile"
      ]
    },
    {
      "addLabels": [
        "managers:docker-compose"
      ],
      "matchManagers": [
        "docker-compose"
      ]
    },
    {
      "allowedVersions": "/^3\\.([02468]|\\d{1,2}[02468])(\\.[02468])?$/",
      "matchDatasources": [
        "docker"
      ],
      "matchManagers": [
        "dockerfile",
        "docker-compose"
      ],
      "matchPackageNames": [
        "python"
      ]
    }
  ]
}
