{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabledManagers": [
    "dockerfile",
    "docker-compose"
  ],
  "packageRules": [
    {
      "addLabels": [
        "managers:dockerfile"
      ],
      "matchManagers": [
        "dockerfile"
      ]
    },
    {
      "addLabels": [
        "managers:docker-compose"
      ],
      "matchManagers": [
        "docker-compose"
      ]
    }
  ]
}
