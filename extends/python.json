{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "allowedVersions": "/^3\\.([012468]{1,2})(\\.[02468]{1,2})?$/",
      "matchDatasources": [
        "docker",
        "github-tags"
      ],
      "matchManagers": [
        "docker-compose",
        "dockerfile",
        "poetry"
      ],
      "matchPackageNames": [
        "poetry",
        "python"
      ]
    },
    {
      "groupName": "group:flake8",
      "matchPackageNames": [
        "flake8"
      ],
      "matchPackagePatterns": [
        "^flake8-"
      ]
    },
    {
      "groupName": "group:jupyter",
      "matchPackageNames": [
        "jupyter"
      ],
      "matchPackagePatterns": [
        "^jupyter-"
      ]
    },
    {
      "groupName": "group:pytest",
      "matchPackageNames": [
        "pytest"
      ],
      "matchPackagePatterns": [
        "^pytest-"
      ]
    },
    {
      "groupName": "group:boto3",
      "matchPackageNames": [
        "boto3",
        "botocore"
      ]
    }
  ]
}
