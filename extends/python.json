{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "groupName": "group:flake8",
      "matchPackageNames": [
        "flake8"
      ],
      "matchPackagePatterns": [
        "^flake8-"
      ]
    },
    {
      "groupName": "group:jupyter",
      "matchPackageNames": [
        "jupyter"
      ],
      "matchPackagePatterns": [
        "^jupyter-"
      ]
    },
    {
      "groupName": "group:pytest",
      "matchPackageNames": [
        "pytest"
      ],
      "matchPackagePatterns": [
        "^pytest-"
      ]
    },
    {
      "groupName": "All {{depType}} update",
      "matchPackagePatterns": [
        "*"
      ],
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true,
      "major": {
        "automerge": false
      }
    }
  ]
}
